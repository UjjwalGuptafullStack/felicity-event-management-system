# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/felicity-events

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# Bcrypt
BCRYPT_ROUNDS=10

# IIIT Email Domain (for participant validation)
IIIT_EMAIL_DOMAIN=@iiit.ac.in

# Admin Bootstrap (Backend-only, never exposed via API)
ADMIN_EMAIL=admin@felicity.iiit.ac.in
ADMIN_PASSWORD=SecureAdminPassword123!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Email / SMTP (leave empty to log credentials to console in dev mode)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Felicity Events <noreply@felicity.iiit.ac.in>
